@model DigitalNagrik.Areas.Intermediary.Data.AddCompliance
@{
    Dictionary<string, string> LabelDictionary = ViewData["LabelDictionary"] as Dictionary<string, string>;
}
<link href="~/assets/css/bootstrap-datepicker.css" rel="stylesheet" />
<script src="~/assets/js/bootstrap-datepicker.js"></script>
<style>
    .datepicker {
        z-index: 9999 !important
    }
</style>
@using (Html.BeginForm("SaveCompliance", "IntermediaryDashboard", FormMethod.Post, new { id = "frm_SaveCompliance", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.GrievanceId)
    @Html.HiddenFor(x => x.RegistrationYear)
    <div class="modal-header pt-3" id="gv-action-modal-content">
        <h3 class="modal-title" id="gv-action-modal-title">@Model.HeaderText</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <hr class="mb-0 mt-2" />
    <div class="modal-body pb-0 pt-3 px-3">
        <div class="accordion p-0" id="accordionPanelsStayOpenExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                    <button class="accordion-button p-2" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                        <h3><i class="text-primary bx bx-user-check align-middle me-1"></i> @LabelDictionary["AppealDetails"]</h3>
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                    <div class="accordion-body">
                        <div class="row mt-2 ms-3">
                            <table class="table table-bordered table-responsive">
                                <tbody style="font-size:17px">
                                    <tr>
                                        <td width="50%" colspan="2">@LabelDictionary["AppealNumber"]: <b>@Model.GrievanceId/@Model.RegistrationYear</b></td>
                                        <td width="50%" colspan="2">@LabelDictionary["AppealDate"]: <b> @Model.ReceiptDate</b></td>
                                    </tr>
                                    <tr>
                                        <td width="100%" colspan="4">
                                            @LabelDictionary["BriefofComplaint"]: <b>@Model.BriefofComplaint</b>
                                            <a target="_blank" href="@Url.Action("AppealPDF", "Registration", new { Area = "Public", qs = SecureQueryString.SecureQueryString.Encrypt("RegistrationYear=" + Model.RegistrationYear + "&GrievanceId=" + Model.GrievanceId) })" class="btn btn-outline-primary btn-sm ms-2">
                                                <i class="bx bxs-file-pdf me-1 text-danger align-middle font-lg"></i><span> @LabelDictionary["ViewAppeal"]</span>
                                            </a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="100%" colspan="4">
                                            @LabelDictionary["Justification"]: <b>@Model.GrievanceDesc</b>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="100%" colspan="4"> @LabelDictionary["GroundforAppeal"]: <b>@Model.GroundTitle</b></td>
                                    </tr>
                                    <tr>
                                        <td width="100%" colspan="4"> @LabelDictionary["ReliefSought"]: <b>@Model.RelieftSoughtSpecification</b></td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row mt-3">
            <div class="col-lg-12">
                <h3><i class="text-warning bx bx-mail-send align-middle me-1"></i> @LabelDictionary["Compliance"]</h3>
            </div>
        </div>
        @if (@Model.Remarks == null || Model.Remarks == "")
        {
            <div class="row mt-2 ms-3" style="font-size:17px">
                <div class="col-lg-2">
                    <label class="custom-input-label">@LabelDictionary["Date"]</label><span class="text-danger"> *</span>
                </div>
                <div class="col-lg-3">
                    @Html.TextBoxFor(x => x.ComplianceDate, new { @id = "ComplianceDate", @class = "form-control DisabledInputs", maxlength = "500", placeholder = @LabelDictionary["Date"], @autocomplete = "off" })
                    @Html.ValidationMessageFor(x => x.ComplianceDate)
                </div>
            </div>
            <div class="row mt-2 ms-3" style="font-size:17px">
                <div class="col-lg-2">
                    <label class="custom-input-label">@LabelDictionary["URLofComplianceReport"]</label><span class="text-danger"> *</span>
                </div>
                <div class="col-lg-10">
                    @Html.TextBoxFor(x => x.URL, new { @id = "URL", @class = "form-control DisabledInputs", maxlength = "500", placeholder = @LabelDictionary["URLofComplianceReport"], @autocomplete = "off" })
                    @Html.ValidationMessageFor(x => x.URL)
                </div>
            </div>
            <div class="row mt-2 ms-3" style="font-size:17px">
                <div class="col-lg-2">
                    <label class="custom-input-label">@LabelDictionary["Remarks"]</label><span class="text-danger"> *</span>
                </div>
                <div class="col-lg-10">
                    @Html.TextAreaFor(x => x.Remarks, new { @id = "Remarks", @class = "form-control DisabledInputs", maxlength = "500", placeholder = @LabelDictionary["Remarks"], @autocomplete = "off" })
                    @Html.ValidationMessageFor(x => x.Remarks)
                </div>
            </div>
            <div class="row mt-2 ms-3" style="font-size:17px">
                <div class="col-lg-2">
                    <label class="custom-input-label" id="lblUploadPDF">@LabelDictionary["SupportingDocument"]</label><span class="text-danger"> *</span>
                    <span class="text-muted text-gray font-xs">@LabelDictionary["(PDFFileupto4Mb)"]</span>
                </div>
                <div class="col-lg-4">
                    @Html.TextBoxFor(m => m.SupportingDocument, new { type = "file", @accept = ".pdf", @class = "form-control fileinput-button", @id = "SupportingDocument" })
                    @Html.ValidationMessageFor(m => m.SupportingDocument)
                </div>
            </div>
            <hr />
            <div class="row mt-3 mb-3">
                <div class="col-lg-12 text-center">
                    <button type="button" class="btn btn-info" id="btnSubmit"><i class="bx bx-check-circle align-middle"></i>&nbsp;@LabelDictionary["Submit"]</button>
                </div>
            </div>
        }
        else
        {
            <div class="row mt-2 ms-3" style="font-size:18px">
                <div class="col-lg-3">
                    <label class="custom-input-label"> @LabelDictionary["Date"]</label><span class="text-danger"> </span>
                </div>
                <div class="col-lg-9">
                    <span>: @Model.ComplianceDate</span>
                </div>
            </div>
            <div class="row mt-2 ms-3" style="font-size:18px">
                <div class="col-lg-3">
                    <label class="custom-input-label"> @LabelDictionary["URLofComplianceReport"]</label><span class="text-danger"> </span>
                </div>
                <div class="col-lg-9">
                    <span>: @Model.URL</span>
                </div>
            </div>
            <div class="row mt-2 ms-3" style="font-size:18px">
                <div class="col-lg-3">
                    <label class="custom-input-label">@LabelDictionary["Remarks"] </label><span class="text-danger"> </span>
                </div>
                <div class="col-lg-9">
                    <span style="word-break:break-all">: @Model.Remarks</span>
                </div>
            </div>

            <div class="row mt-2 ms-3 mb-2" style="font-size:18px">
                <div class="col-lg-3">
                    <label class="custom-input-label">@LabelDictionary["SupportingDocument"]</label><span class="text-danger"> </span>
                </div>
                <div class="col-lg-4">
                    @if (Model.isSupportingDocument == "N")
                    {
                        <span class="text-danger">: @LabelDictionary["NoDocumentUploaded"]</span><br />
                    }
                    else
                    {
                        <a class="btn btn-outline-danger" target="_blank" href="@Url.Action("ViewAppealDocument", "GACGridViewInbox", new { Area = "GridView", qs = SecureQueryString.SecureQueryString.Encrypt("FilePath=" + Model.FilePath + "&FileType=pdf") })"><i class=" bx bxs-file-pdf align-middle me-1"></i>@LabelDictionary["ViewDocument"]</a>

                        @*<a class="btn btn-outline-danger" target="_blank" href="@Url.Action("CompliancePDF", "IntermediaryDashboard", new { Area = "Intermediary", qs = SecureQueryString.SecureQueryString.Encrypt("RegistrationYear=" + @Model.RegistrationYear + "&GrievanceId=" + @Model.GrievanceId) })"><i class=" bx bxs-file-pdf align-middle me-1"></i>View Document</a>*@
                    }
                </div>
            </div>
            <hr />
            <div class="row mt-3 mb-3">
                <div class="col-lg-12 text-center">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bx bx-check-circle align-middle"></i>&nbsp;@LabelDictionary["Close"]</button>
                </div>
            </div>
        }
    </div>

}
<script>
    $(document).ready(function () {
        $('#ComplianceDate').datepicker({
            changeMonth: true,
            changeYear: true,
            format: 'dd/mm/yyyy',
            orientation: 'bottom',
            endDate: new Date(),
            autoclose: true
        }).attr('readonly', 'readonly');
    });
    $('#frm_SaveCompliance').removeData("validator").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse($('#frm_SaveCompliance'));
    $("#btnSubmit").click(function () {
        if ($("#frm_SaveCompliance").valid()) {
            $('#frm_SaveCompliance').submit();
        }
    });
</script>
