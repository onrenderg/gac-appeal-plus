                                                            <span id="LabelRemarks">@(LabelRemarks)</span> <span class="text-danger"> *</span>
                                                        </div>
                                                        <div class="col-lg-9 mb-3">
                                                            <textarea data-val="true" data-val-required="Enter Text" id="ResponseText_@row.ResponseID" name="ResponseText_@row.ResponseID" class="form-control DisabledInputs" maxlength="4000" placeholder="@(LabelPlaceholder)" autocomplete="off"></textarea>
                                                            <div class="float-end text-success"><span id="display_count">0</span> word(s) / <span id="display_count_total"></span></div>
                                                            <span class="field-validation-valid" data-valmsg-for="ResponseText_@row.ResponseID" data-valmsg-replace="true"></span>
