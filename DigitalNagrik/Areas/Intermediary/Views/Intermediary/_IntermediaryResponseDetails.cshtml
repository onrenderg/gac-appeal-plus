                                    </h4>
                                </div>
                                @*<div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Y" id="chkDec2">
                                        <label class="form-check-label" for="chkDec2">


                                        </label>
                                    </div>*@
                                @*@SecureQueryString.SecureQueryString.Encrypt("RegistrationYear=2022" + "&GrievanceId=37")*@
                            </div>
                        </div>
                        <div class="row mt-2">
                            <hr />
                            <div class="col-lg-12 text-center">
                                <button type="button" class="btn btn-info" id="btnSubmit"><i class="bx bx-check-circle align-middle"></i>&nbsp;@LabelDictionary["Submit"]</button>
                                @*<button type="button" class="btn btn-danger" id="btnCancel"><i class=" fa fa-close"></i>&nbsp;Cancel </button>*@
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row ms-3 mb-3">
                            <div class="col-lg-12">
                                @{Html.RenderAction("IntermediaryResponseView", "Intermediary", new { Area = "Intermediary", qs = SecureQueryString.SecureQueryString.Encrypt("RegistrationYear=" + Model.RegistrationYear + "&GrievanceId=" + Model.GrievanceId) });
                                }
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        $("#ResponseText_3").on('keyup', function () {
            var words = 0;
            if ((this.value.match(/\S+/g)) != null) {
                words = this.value.match(/\S+/g).length;
            }
            var noofwords = 0;
            if ($('input[name="rdlResponse_3"]:checked').val() == "Y") {
                noofwords = 250;
            }
            else {
                noofwords = 1000;
            }
            /*      $('#display_count_total').text(noofwords);*/
            if (words > noofwords) {
                // Split the string on first 200 words and rejoin on spaces
                var trimmed = $(this).val().split(/\s+/, noofwords).join(" ");
                // Add a space at the end to make sure more typing creates new words
                $(this).val(trimmed + " ");
            }
            else {
                $('#display_count').text(words);
                //$('#word_left').text(200 - words);
            }
        });
    });

</script>
<script>
    $('input[type=radio][id^=rdlResponse_]').change(function () {
        var responseid = $('#' + this.id).data('responseid');
        var changeon = $('#' + this.id).data('changeon'); //getter
        var subresponse = $('#' + this.id).data('subresponse'); //getter
        var value = $(this).val();
        if (subresponse == "Y") {
            $("#divSubresponse_" + responseid).html('');
            $.ajax({
                url: '@Url.Action("OpenIntermediarySubResponse", "Intermediary", new { area = "Intermediary" })',
                type: "GET",
                dataType: "html",
                data: { responseid: responseid, changeon: changeon, value: value },
                success: function (data) { if (data) { $("#divSubresponse_" + responseid).html('').html(data); } }
            });
        }
        else if (subresponse == 'N') {

         /*   $('.hideclass_R').hide();*/
           /* if (changeon == value) {*/
                $('.hideclass_' + responseid).show();
            //}

        }
        if (value == "Y") {
            $("#ResponseText_" + responseid).attr("placeholder", "@LabelDictionary["PlaceHolderIntermediaryY"]");
            $('#display_count_total').text('250');
            $("#LabelRemarks").text('@LabelDictionary["Anyrelevantdetail/reason"]');

        }
        else {
            $("#ResponseText_" + responseid).attr("placeholder","@LabelDictionary["PlaceHolderIntermediaryN"]");
            $('#display_count_total').text('1000');
            $("#LabelRemarks").text('@LabelDictionary["Reasonwhythereliefsoughtshouldnotbegranted"]');
        }
    });
    $("#btnSubmit").click(function () {
        if ($('#chkDec1').is(':checked')) {
            $('#frm_SaveintermediaryResponse').removeData("validator").removeData("unobtrusiveValidation");
            $.validator.unobtrusive.parse($('#frm_SaveintermediaryResponse'));
                if ($("#frm_SaveintermediaryResponse").valid()) {
                    $('#frm_SaveintermediaryResponse').submit();
                }
        }
        else {
            alertify.notify("<div class='animated fadeIn m-0'><i class='bx bx-message-x align-middle me-1'></i>Please accept the declarations </div>", "error", 5, function () { });
        }
    });

    function GetAuthLetterPdf(RegistrationYear, GrievanceId) {
        if (RegistrationYear != "" && RegistrationYear != null && GrievanceId != "" && GrievanceId != null) {
            var qs = '@SecureQueryString.SecureQueryString.Encrypt("RegistrationYear=" + @Model.RegistrationYear+ "&GrievanceId=" + @Model.GrievanceId)';
            var url = '@Url.Action("IntermediaryDownloadPDF", "Intermediary", new { Area = "Intermediary" })?qs1=' + qs;
            window.open(url, "_blank");
        }
        else {
            return false;
        }
    }
</script>
