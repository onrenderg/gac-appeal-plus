                        @*<h3 class="text-center">Intermediary Response</h3>*@
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                                <button class="accordion-button p-2" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                                    <h4><i class="text-primary bx bx-user-check align-middle me-1"></i>@LabelDictionary["AppealDetails"]</h4>
                                </button>
                            </h2>
                            <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                                <div class="accordion-body">
                                    <div class="row ms-1 mt-2">
                                        <table class="table table-bordered table-hover table-responsive" width="100%">
                                            <tbody style="font-size:17px">
                                                <tr>
                                                    <td width="50%" colspan="2">@LabelDictionary["AppealNumber"]: <b>@row1.GrievanceId/@row1.RegistrationYear</b></td>
                                                    <td width="50%" colspan="2">@LabelDictionary["AppealDate"]: <b> @row1.ReceiptDate</b></td>
                                                </tr>
                                                <tr>
                                                    <td width="100%" colspan="4">
