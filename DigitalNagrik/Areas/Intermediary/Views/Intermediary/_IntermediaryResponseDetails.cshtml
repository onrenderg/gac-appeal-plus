@model DigitalNagrik.Areas.Intermediary.Data.GACApplicationAssigned
@{
    Dictionary<string, string> LabelDictionary = ViewData["LabelDictionary"] as Dictionary<string, string>;
}
@if (Model.IsPartialView == "N")
{
    ViewBag.Title = "IntemediaryResponse";
    Layout = "~/Views/Shared/_LayoutPublicNew.cshtml";

}
<style>
    .form-control {
        font-size: 17px !important;
    }
</style>

@using (Html.BeginForm("SaveIntermediaryResponse", "Intermediary", FormMethod.Post, new { id = "frm_SaveintermediaryResponse", enctype = "multipart/form-data" }))
{
    if (Model.OpenInModal == "Y")
    {
        <div class="modal-header pt-3" id="gv-action-modal-content">
            <h3 class="modal-title" id="gv-action-modal-title">@Model.HeaderText</h3>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
