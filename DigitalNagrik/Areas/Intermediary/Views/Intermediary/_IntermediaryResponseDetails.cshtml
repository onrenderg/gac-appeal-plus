        <hr class="mb-0 mt-2" />
    }
    <div class="@(Model.OpenInModal == "Y"  ? "modal-body pb-0 pt-3 px-3" : "")">
        <div class="row p-2">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.GrievanceId)
            @Html.HiddenFor(x => x.RegistrationYear)
            @Html.HiddenFor(x => x.OpenInModal)
            @Html.HiddenFor(x => x.FormName)
