    <div id="topbar">
        <div class="px-3">
            <div class="row">
                <div class="col-lg-6">
                </div>
                <div class="col-lg-6">
                    <div class="text-end pt-1">
                        @if (ViewData["LanguageMaster"] != null)
                        {
                            var objList = new List<mLanguageMaster>();
                            objList = (List<mLanguageMaster>)ViewData["LanguageMaster"];
                            <div class="dropdown">
                                <button class="dropbtn" style="min-width:150px;">@objList.Where(x => x.languageCode == (UserSession.LangCulture == null ? "en-IN" : UserSession.LangCulture)).FirstOrDefault().languageDescriptionlocal   </button>
                                <div class="dropdown-content mt-1">
                                    @foreach (var obj in objList)
                                    {
                                        if (obj.languageCode != UserSession.LangCulture)
                                        {
                                            @Html.ActionLink(obj.languageDescriptionlocal, "ChangeLanguage", "CommonControls", new { Area = "", LangCulture = obj.languageCode }, "")
                                        }
                                    }

                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="mid-header" class=" d-none d-lg-block">
