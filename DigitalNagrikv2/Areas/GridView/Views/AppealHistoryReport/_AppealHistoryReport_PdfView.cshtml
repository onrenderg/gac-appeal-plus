@model DigitalNagrik.Areas.GridView.Data.AppealHistoryReport
<link rel="stylesheet" href="@Url.Content("~/DashAssets/css/core.css")" class="template-customizer-core-css" />
<link rel="stylesheet" href="@Url.Content("~/DashAssets/css/theme-default.css")" class="template-customizer-theme-css" />
<link rel="stylesheet" href="@Url.Content("~/DashAssets/css/demo.css")" />

<style>
    .breakhere {
        page-break-after: always
    }

    div, span, table td, p, li, a, h1, h2, h3, h4, h5, h6 {
        font-family: Calibri !important;
    }
</style>

@if (Model.HistoryList != null && Model.HistoryList.Count() > 0)
{
    int counter = 0;
    <div class="text-center">
        <img id="Header" src="@Server.MapPath("~/assets/img/logo.png")" style="height:100px;" alt="DigitalNagrikHeader" />
    </div>
    <div class="text-center">
        <h2 class="text-primary mt-2 fw-semibold">Appeal History Report</h2>
    </div>
    foreach (var Appeal in Model.HistoryList)
    {
        <table class="table table-bordered table-sm mb-0">
            <tbody>
                <tr>
                    <td style="width:1%">1.</td>
                    <td style="width:1%">Sr. No.</td>
                    <td class="fw-semibold">@(++counter)</td>
                </tr>
                <tr>
                    <td>2.</td>
                    <td>Appeal No.</td>
                    <td class="fw-semibold">@Appeal.GrievanceId/@Appeal.RegistrationYear</td>
                </tr>
                <tr>
                    <td>3.</td>
                    <td style="line-height:15px !important;">Date of Appeal</td>
                    <td class="fw-semibold">@Appeal.AppealDt</td>
                </tr>
                <tr>
                    <td>4.</td>
                    <td>Name of Appellant</td>
                    <td class="fw-semibold">@Appeal.AppellantNm</td>
                </tr>
                <tr>
                    <td>5.</td>
                    <td>Name of Intermediary</td>
                    <td class="fw-semibold">@Appeal.IntermediaryNm</td>
                </tr>
                <tr>
                    <td>6.</td>
                    <td>Summary of Appeal</td>
                    <td>@Html.Raw(Appeal.MatterSummary)</td>
                </tr>
                <tr>
                    <td>7.</td>
                    <td>GAC</td>
                    <td class="fw-semibold">@Appeal.GACNm</td>
                </tr>
                <tr>
                    <td>8.</td>
                    <td>Assistant Manager/ Manager action/comment</td>
                    <td class="fw-semibold">@Appeal.AssistantManagerObservation</td>
                </tr>
                <tr>
                    <td>9.</td>
                    <td>GO response</td>
                    <td>
                        <div>
                            To,<br />
                            &nbsp;&nbsp;&nbsp;&nbsp;Grievance Appellate Committee<br /><br />
                            Madam/sir,<br /><br />
                            I hereby submit my response to Appeal No. @Appeal.GrievanceId/@Appeal.RegistrationYear filed with Grievance Appellate Committee under sub-rule (3) of rule 3A of the Information Technology (Intermediary Guidelines and Digital Media Ethics Code) Rules, 2021. The details are as submitted by me herewith online.
                            <br /><br />
                            <div>
                                1. @Html.Raw(Appeal.IntermediaryResponseText)  &nbsp;<b style="color:@(Appeal.IntermediaryResponseValue == "Yes" ? "green" : "red")">@Appeal.IntermediaryResponseValue</b>
                                <br />
                                @if (!string.IsNullOrWhiteSpace(Appeal.IntermediaryResponseDetails))
                                {
                                    <span>Any relevant detail/ reason:</span><b> @Appeal.IntermediaryResponseDetails</b>
                                }
                                @if (!string.IsNullOrWhiteSpace(Appeal.IntermediaryResponseURLs))
                                {
                                    <div>URL(s) : <span style="color: #3f7834"></span>@Appeal.IntermediaryResponseURLs</div>
                                }
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>10.</td>
                    <td>GAC Member-1 Comment</td>
                    <td class="fw-semibold">@Appeal.MemberComment_1</td>
                </tr>
                <tr>
                    <td>11.</td>
                    <td>GAC Member-2 Comment</td>
                    <td class="fw-semibold">@Appeal.MemberComment_2</td>
                </tr>
                <tr>
                    <td>12.</td>
                    <td>Chairperson’s Comment</td>
                    <td class="fw-semibold">@Appeal.ChairpersonComment</td>
                </tr>
                <tr>
                    <td>13.</td>
                    <td>Final decision</td>
                    <td>@Html.Raw(Appeal.FinalDecision)</td>
                </tr>
                <tr>
                    <td>14.</td>
                    <td>Notification Sent to Appellant</td>
                    <td>@Html.Raw(Appeal.NotifAppellant)</td>
                </tr>
            </tbody>
        </table>
        <div class="breakhere"></div>
    }
}

