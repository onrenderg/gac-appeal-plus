@model DigitalNagrik.Areas.GridView.Data.AppealHistoryReport

@if (Model.HistoryList != null && Model.HistoryList.Count() > 0)
{
    int counter = 0;
    <h2 style="font-family:Calibri;">Appeal History Report</h2>
    foreach (var Appeal in Model.HistoryList)
    {
        <table style="font-family:Calibri; border-collapse:collapse">
            <tbody>
                <tr>
                    <td style="width: 1%; border: 1px solid #e8e8e8">1.</td>
                    <td style="border: 1px solid #e8e8e8">Sr. No.</td>
                    <td style="border: 1px solid #e8e8e8; font-weight: bold;">@(++counter)</td>
                </tr>
                <tr>
                    <td style="width: 1%; border: 1px solid #e8e8e8">2.</td>
                    <td style="border: 1px solid #e8e8e8">Appeal No.</td>
                    <td style="border: 1px solid #e8e8e8;font-weight:bold;">@Appeal.GrievanceId/@Appeal.RegistrationYear</td>
                </tr>
                <tr>
                    <td style="width: 1%; border: 1px solid #e8e8e8">3.</td>
                    <td style="border: 1px solid #e8e8e8">Date of Appeal</td>
                    <td style="border: 1px solid #e8e8e8; font-weight: bold;">@Appeal.AppealDt</td>
                </tr>
                <tr>
                    <td style="width: 1%; border: 1px solid #e8e8e8">4.</td>
                    <td style="border: 1px solid #e8e8e8">Name of Appellant</td>
                    <td style="border: 1px solid #e8e8e8; font-weight: bold;">@Appeal.AppellantNm</td>
                </tr>
                <tr>
                    <td style="width: 1%; border: 1px solid #e8e8e8">5.</td>
                    <td style="border: 1px solid #e8e8e8">Name of Intermediary</td>
                    <td style="border: 1px solid #e8e8e8; font-weight: bold;">@Appeal.IntermediaryNm</td>
                </tr>
                <tr>
                    <td style="width: 1%; border: 1px solid #e8e8e8">6.</td>
                    <td style="border: 1px solid #e8e8e8">Summary of Appeal</td>
                    <td style="border: 1px solid #e8e8e8">@Html.Raw(Appeal.MatterSummary)</td>
                </tr>
                <tr>
                    <td style="width: 1%; border: 1px solid #e8e8e8">7.</td>
                    <td style="border: 1px solid #e8e8e8">GAC</td>
                    <td style="border: 1px solid #e8e8e8; font-weight: bold;">@Appeal.GACNm</td>
                </tr>
                <tr>
                    <td style="width: 1%; border: 1px solid #e8e8e8">8.</td>
                    <td style="border: 1px solid #e8e8e8">Assistant Manager/ Manager action/comment</td>
                    <td style="border: 1px solid #e8e8e8; font-weight: bold;">@Appeal.AssistantManagerObservation</td>
                </tr>
                <tr>
                    <td style="width: 1%; border: 1px solid #e8e8e8">9.</td>
                    <td style="border: 1px solid #e8e8e8">GO response</td>
                    <td style="border: 1px solid #e8e8e8">
                        <p>
                            To,<br />
                            &nbsp;&nbsp;&nbsp;&nbsp;Grievance Appellate Committee<br /><br />
                            Madam/sir,<br /><br />
                            I hereby submit my response to Appeal No. @Appeal.GrievanceId/@Appeal.RegistrationYear filed with Grievance Appellate Committee under sub-rule (3) of rule 3A of the Information Technology (Intermediary Guidelines and Digital Media Ethics Code) Rules, 2021. The details are as submitted by me herewith online.
                            <br /><br />
<p>
                            1. @Html.Raw(Appeal.IntermediaryResponseText)  &nbsp;<b style="color:@(Appeal.IntermediaryResponseValue == "Yes" ? "green" : "red")">@Appeal.IntermediaryResponseValue</b>
                            <br />
                            @if (!string.IsNullOrWhiteSpace(Appeal.IntermediaryResponseDetails))
                            {
                                <span>Any relevant detail/ reason:</span><b> @Appeal.IntermediaryResponseDetails</b>
                            }
                            @if (!string.IsNullOrWhiteSpace(Appeal.IntermediaryResponseURLs))
                            {
                                <div>URL(s) : <span style="color: #3f7834"></span>@Appeal.IntermediaryResponseURLs</div>
                            }
                        </p>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td style="width: 1%; border: 1px solid #e8e8e8">10.</td>
                    <td style="border: 1px solid #e8e8e8">GAC Member-1 Comment</td>
                    <td style="border: 1px solid #e8e8e8; font-weight: bold;">@Appeal.MemberComment_1</td>
                </tr>
                <tr>
                    <td style="width: 1%; border: 1px solid #e8e8e8">11.</td>
                    <td style="border: 1px solid #e8e8e8">GAC Member-2 Comment</td>
                    <td style="border: 1px solid #e8e8e8; font-weight: bold;">@Appeal.MemberComment_2</td>
                </tr>
                <tr>
                    <td style="width: 1%; border: 1px solid #e8e8e8">12.</td>
                    <td style="border: 1px solid #e8e8e8">Chairperson's Comment</td>
                    <td style="border: 1px solid #e8e8e8; font-weight: bold;">@Appeal.ChairpersonComment</td>
                </tr>
                <tr>
                    <td style="width: 1%; border: 1px solid #e8e8e8">13.</td>
                    <td style="border: 1px solid #e8e8e8">Final decision</td>
                    <td style="border: 1px solid #e8e8e8">@Html.Raw(Appeal.FinalDecision)</td>
                </tr>
                <tr>
                    <td style="width: 1%; border: 1px solid #e8e8e8">14.</td>
                    <td style="border: 1px solid #e8e8e8">Notification Sent to Appellant</td>
                    <td style="border: 1px solid #e8e8e8">@Html.Raw(Appeal.NotifAppellant)</td>
                </tr>
            </tbody>
        </table>
        <p style="page-break-after: always">&nbsp;</p>
        <hr />
        <p style="page-break-after: always">&nbsp;</p>
    }
}

