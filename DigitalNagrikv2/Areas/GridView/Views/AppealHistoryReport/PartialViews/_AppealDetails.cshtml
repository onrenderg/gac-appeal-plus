@model DigitalNagrik.Areas.GridView.Data.SearchAppealDetails
@if (Model.AppealDetailsList.Count > 0)
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(x => x.GrievanceId)
    @Html.HiddenFor(x => x.RegistrationYear)
    <link href="@Url.Content("~/assets/DataTables/css/dataTables.bootstrap5.css")" rel="stylesheet" />
    <script src="@Url.Content("~/assets/DataTables/js/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/assets/DataTables/js/dataTables.bootstrap5.min.js")"></script>
    <div class="row mt-2 ms-3" style="font-size:17px;">
        @if (Model.AppealDetailsList.Count > 0)
        {
            if (Model.AppealDetailsList.Count == 1)
            {
                foreach (var row in Model.AppealDetailsList)
                {
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-lg-12">
                                <h4><i class="bi bi-file-pdf-fill me-1 text-danger"></i>Appeal Details - <b> @row.GrievanceId/ @row.RegistrationYear</b></h4>
                            </div>
                            <hr class="mt-0" />
                            <div class="col-md-4 mb-2">
                                Appealant Name: <b>@row.AppealantName</b>
                            </div>
                            <div class="col-md-4 mb-2">
                                Appeal Date:<b> @row.AppealDate</b>
                            </div>
                            <div class="col-md-4 mb-2">
                                Appealant Mobile: <b>@row.AppealantMobile</b>
                            </div>
                            <div class="col-md-4 mb-2">
                                Assigned To: <span class="badge bg-info"><b>@row.GACAbbr</b></span>
                            </div>
                            <div class="col-md-4 mb-2">
                                Assigned On: <b>@row.AssignedDateTime</b>
                            </div>

                            <div class="col-md-4 mb-2">
                                Appeal Status: <span class="badge bg-success"><b>@row.ActionDesc</b></span>
                            </div>
                            <hr />
                            <div class="col-lg-12 mt-2 text-center">
                                <a target="_blank" href="@Url.Action("AppealPDF", "Registration", new { Area = "Public", qs = SecureQueryString.SecureQueryString.Encrypt("RegistrationYear=" + Model.RegistrationYear + "&GrievanceId=" + Model.GrievanceId) })" class="btn btn-secondary">
                                    <i class="bx bx-file me-1 align-text-bottom"></i>View Appeal
                                </a>
                                <a href="javascript:void(0)" data-url="@Url.Action("ShowTracker", "GACAppeal", new { Area = "", qs = SecureQueryString.SecureQueryString.Encrypt("GrievanceId=" + Model.GrievanceId + "&RegistrationYear=" + Model.RegistrationYear) })" class="btn btn-primary" onclick="ViewTracker($(this))"><i class="bx bx-map-pin me-1 align-text-bottom"></i>Track Appeal</a>
                                <a href="javascript:void(0)" data-modalclass="xxl" data-url="@Url.Action("AppealHistoryPV", "AppealHistory", new { Area = "GridView", qs = SecureQueryString.SecureQueryString.Encrypt("GrievanceId=" + Model.GrievanceId + "&RegistrationYear=" + Model.RegistrationYear) })" class="btn btn-info" onclick="TakeAction($(this),'M')"><i class="bx bx-history me-1 align-text-bottom"></i>Appeal History</a>

                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-lg-12">
                    <h4><i class="bi bi-file-pdf-fill me-1 text-danger"></i>Appeal Details</h4>
                </div>
                <hr class="mt-0" />
                <div class="col-md-12">
                    <table class="table table-bordered table-sm table-responsive tablePaging">
                        <thead class="table-primary">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Appeal Details</th>
                                <th scope="col">Appealant Details</th>
                                <th scope="col">Assigned To</th>
                                <th scope="col">Current Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int counter = 1;}
                            @foreach (var row in Model.AppealDetailsList)
                            {
                                <tr>
                                    <th scope="row">@counter</th>
                                    <td>
                                        <span class="me-1"><b>Appeal ID:</b></span><span>@row.GrievanceId / @row.RegistrationYear</span><br />
                                        <span class="me-1"><b>Appeal Date:</b></span><span>@row.AppealDate</span>
                                    </td>
                                    <td>
                                        <span class="me-1"><b>Appealant Name:</b></span><span>@row.AppealantName</span><br />
                                        <span class="me-1"><b>Appealant Mobile:</b></span><span>@row.AppealantMobile</span>
                                    </td>
                                    <td>
                                        <span class="me-1"><b>Assigned To:</b></span><span class="badge bg-primary"><b>@row.GACAbbr</b></span><br />
                                        <span class="me-1"><b>Assigned Date:</b></span><span>@row.AssignedDateTime</span>
                                    </td>
                                    <td><span class="badge bg-info"><b>@row.ActionDesc</b></span></td>
                                </tr>
                                counter = counter + 1;
                            }
                            <script>
                                $(document).ready(function () {
                                    $(".tablePaging").DataTable()
                                });
                            </script>

                        </tbody>
                    </table>

                </div>
            }
        }
        else
        {
            <div class="col-md-12 text-center"><span class="text-gray"><b>No Appeal Found</b></span></div>
        }
    </div>
}
else
{
    <div class="row mt-2">
        <div class="col-lg-12 text-center">
            <h4 class="text-info"><i class="bx bx-info-circle mr-1"></i>No Appeal Found</h4>
        </div>
    </div>

}
