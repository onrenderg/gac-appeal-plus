@model DigitalNagrik.Areas.Public.Models.UserOTPVerfication

@{

    ViewBag.Title = "OTPLoginVerification";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
    var resendOTP = Url.Action("getResendOTP","Registration");
}


<style>
    .Mandatory {
        color: red;
    }

    .form-control:disabled, .form-control[readonly] {
        background-color: #e9ecef;
        opacity: 1;
    }

    .field-validation-error {
        color: red;
    }

    .validation-summary-errors {
        color: red;
    }
</style>

<section >
    <div class="container  h-100">

        <div class="card" style="border-radius: 1rem;">

            <div class="row g-0">
            
                <div class="col-md-12 col-lg-12 d-flex align-items-center">
                    <div class="card-body p-4 p-lg-5 text-black">

                        @using (Html.BeginForm("CitizenPinLogin", "PublicLogin", FormMethod.Post, new { id = "OTPLoginVerification" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="card" style="min-height: 700px; ">
                                <div class=" card-header bg-success text-white">
                                    <i class="fa fa-layer-group  "></i>&nbsp;&nbsp;&nbsp; OTP Verification
                                </div>
                                <div class="card-body">
                                    @Html.ValidationSummary(true)

                                    @Html.HiddenFor(m => m.MobileNo)
                                    @Html.HiddenFor(m => m.MobileNoOTPID)
                                    @Html.HiddenFor(m => m.RegistrationYear)
                                    @Html.HiddenFor(m => m.GrievanceID)
                                    <div class="text-danger mt-2">
                                        Fields marked with * are mandatory
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <label class="form-label" for="form2Example17">
                                                @if (Model.EmailorMobile == "M")
                                                {
                                                    <span>
                                                        Enter OTP Sent on Mobile Number <b>xxxxxx</b><b>@Model.MobileNo.Substring(6, 4) </b> with OTP ID <b>
                                                            <span id="otpid">@Html.DisplayFor(m => m.MobileNoOTPID)</span>
                                                        </b>
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span>
                                                        Enter OTP Sent on Email <b>xxxxxx</b><b>@Model.MobileNo.Substring(6, Model.MobileNo.ToString().Length - 6) </b> with OTP ID <b>
                                                            <span id="otpid">@Html.DisplayFor(m => m.MobileNoOTPID)</span>
                                                        </b>
                                                    </span>
                                                }
                                            </label>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(m => m.txtMobileOTP, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.txtMobileOTP)
                                        </div>
                                        <div class="col-sm-1">
                                            <a id="resendOTP" class="btn btn-warning  btn-block" href="#">
                                                Resend
                                            </a>
                                        </div>
                                        <div class="col-sm-7 text-info" style="text-align:right;">
                                            <div id="WaitDiv"></div>
                                        </div>

                                    </div>
                                    <div class="mt-4 row">
                                        <div class="col-6">
                                            <label class="custom-input-label mb-1">Captcha<span class="text-danger">*</span></label>
                                            <div class="input-group">
                                                <span class="input-group-text" id="basic-addon1">
                                                    <img id="CaptchaImage" alt="Captcha" src="@Url.Action("CaptchaImage", "Home", new { Area = "" })" />
                                                    <a title="Click to refresh Captcha" onclick="RefreshCaptcha()"><i class="fa fa-refresh ms-2" aria-hidden="true"></i></a>
                                                </span>
                                                @Html.TextBoxFor(x => x.Captcha, new { @id = "txtCaptcha", @class = "form-control DisabledInputs", placeholder = "Enter Captcha", autocomplete = "off", maxlength = "6" })
                                            </div>
                                            <div id="SpanCaptchaValidation">
                                                @Html.ValidationMessageFor(x => x.Captcha)
                                            </div>
                                        </div>
                                        <div class="col-4"></div>
                                        <div class="col-2 mt-2">
                                            <br />
                                            <input type="submit" class="btn btn-success  btn-block" value="Verify" />

                                        </div>
                                    </div>

                                    <br />
                                    <div class="row">

                                        <div class="col-sm-10"></div>
                                        <div class="col-sm-2">
                                            <a class="btn btn-warning  btn-block" href="@Url.Action("index", "Home", new { Area = "" })">Cancel</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@if (ViewData["SuccessMessage"] != null)
{
    <script type="text/javascript">
                window.onload = function () {
                    alertify.success('@ViewData["SuccessMessage"]');
                 };
    </script>
}
@if (ViewData["ErrorMessage"] != null)
{
    <script type="text/javascript">
                window.onload = function () {
                    alertify.error('@ViewData["ErrorMessage"]');
                 };
    </script>
}
<script>


    function countdown() {
        console.log(timeLeft);
        if (timeLeft == -1) {
            clearTimeout();
            $("#resendOTP").show();
            $("#WaitDiv").hide();
        } else {
            $("#resendOTP").hide();
            $("#WaitDiv").show();
            WaitDiv.innerHTML = timeLeft + ' seconds remaining for Resend SMS';
            timeLeft--;
        }

    }

     function RefreshCaptcha() {
        $.ajax({
            url: '@Url.Action("CaptchaImage", "Home", new { area = "" })',
            data: {},
            success: function (data) {
                $("#CaptchaImage").html(data);
            }
        });
        $("#CaptchaImage").attr("src", '@Url.Action("CaptchaImage", "Home", new { area = "" })?' + new Date().getTime());
    };
       $(function() {
           $("#resendOTP").click(function() {
             var url = "@resendOTP";


            var dataValue = {};
            $.ajax({
                url: url,
                type: 'POST',
                cache: false,
                data: dataValue,
                async: true,
                success: function (result) {
                    $('#otpid').text(result["MobileNoOTPID"]);
                    $('#MobileNoOTPID').val(result["MobileNoOTPID"]);
                    var timeLeft = 30;
                    var timerId = setInterval(countdown, 1000);
                    function countdown() {
                       // console.log(timeLeft);
                        if (timeLeft == -1) {
                            clearInterval(timerId);
                            $("#resendOTP").show();
                            $("#WaitDiv").hide();
                        } else {
                            $("#resendOTP").hide();
                            $("#WaitDiv").show();
                            WaitDiv.innerHTML = timeLeft + ' seconds remaining for resend sms';
                            timeLeft--;
                        }
                    }
                },
                error: function(xhr, x, e) {
                alert(e);
                },
                complete: function() {
                }
            });
        });
       });
</script>