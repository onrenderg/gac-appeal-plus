@model DigitalNagrik.Areas.Intermediary.Data.ReliefSoughtList
    @{ 
        Dictionary<string, string> LabelDictionary = ViewData["LabelDictionary"] as Dictionary<string, string>;
    }
<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title"><i class="bx bx-user text-primary me-1"></i>@LabelDictionary["Add/UpdateReliefSought(s)"]</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        @using (Html.BeginForm("SaveReliefSought", "IntermediaryDashboard", FormMethod.Post, new { id = "frm_SaveReliefSought", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.ReliefId)
            <div class="row mt-3">
                <div class="col-lg-2">
                    <label class="custom-input-label">@LabelDictionary["ReliefTitle"]</label><span class="text-danger"> *</span>
                </div>
                <div class="col-lg-4">
                    @Html.TextBoxFor(x => x.ReliefTitle, new { @id = "ReliefTitle", @class = "form-control DisabledInputs", maxlength = "1000", placeholder = @LabelDictionary["ReliefTitle"], @autocomplete = "off" })
                    @Html.ValidationMessageFor(x => x.ReliefTitle)
                </div>
                <div class="col-lg-2">
                    <label class="custom-input-label">@LabelDictionary["SpecificationLabel"]</label><span class="text-danger"> *</span>
                </div>
                <div class="col-lg-4">
                    @Html.TextBoxFor(x => x.SpecificationLabel, new { @id = "SpecificationLabel", @class = "form-control DisabledInputs", maxlength = "1000", placeholder = @LabelDictionary["SpecificationLabel"], @autocomplete = "off" })
                    @Html.ValidationMessageFor(x => x.SpecificationLabel)
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-lg-2">
                    @LabelDictionary["IsActive"]
                </div>
                <div class="col-2">
                    <div class="form-check form-switch">
                        @if (Model.IsActive == "Y")
                        {
                            <input class="form-check-input" type="checkbox" role="switch" id="IsActive" name="IsActive" checked>
                        }
                        else
                        {
                            <input class="form-check-input" type="checkbox" role="switch" id="IsActive" name="IsActive">
                        }
                    </div>
                </div>

            </div>
        }
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-success" id="btnSubmit"><i class="bx-check-circle bx align-middle"></i>&nbsp;@LabelDictionary["Submit"]</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bx bx-x-circle me-1 align-middle"></i>@LabelDictionary["Close"]</button>
    </div>
</div>

<script>
    $('#frm_SaveReliefSought').removeData("validator").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse($('#frm_SaveReliefSought'));
    $("#btnSubmit").click(function () {
        if ($("#frm_SaveReliefSought").valid()) {
            $('#frm_SaveReliefSought').submit();
        }
    });
</script>
