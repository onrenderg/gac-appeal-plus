@model DigitalNagrik.Models.PublicMenu
@{
    ViewBag.Title = Model.MenuName;
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
    Dictionary<string, string> LabelDictionary = ViewData["LabelDictionary"] as Dictionary<string, string>;
}

<section class="breadcrumbs">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h2><b>@Model.MenuName</b></h2>
            <ol>
                <li><a href="@Url.Action("Index", "Home", new { Area = "" })">@LabelDictionary["Home"]</a></li>
                <li>@Model.MenuName</li>
            </ol>
        </div>
    </div>
</section>
<section class="inner-page">
    <div class="container mt-3" style="min-height:50vh;">
        @if (!string.IsNullOrWhiteSpace(Model.MenuContent))
        {
            <div style="text-align:justify">
                @Html.Raw(Model.MenuContent)
            </div>
        }
        else
        {
            <div class="p-4 text-center opacity-25">
                <i class="fa fa-exclamation-circle fa-4x"></i><br />
                <span class="font-xl">Content is not available at the moment.</span>
            </div>
        }
    </div>
</section>
