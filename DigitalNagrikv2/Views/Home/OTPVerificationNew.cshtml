                                timeLeft--;
                            }
                        }
                    }
                },
                error: function(xhr, x, e) {
                alert(e);
                },
                complete: function() {
                }
            });
        });
    function AllowNumericOnly(e) {
        var ch = String.fromCharCode(event.keyCode);
        var filter = /[0-9]/;
        if (!filter.test(ch)) {
            event.returnValue = false;
            return false;
        }
        else {
            return true;
        }
    }
</script>