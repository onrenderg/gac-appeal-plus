                    <div class="mt-4 row">
                        <div class="col-md-9">
                            <label class="custom-input-label mb-1">@LabelDictionary["Captcha"]<span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text" id="basic-addon1">
                                    <img id="CaptchaImage" alt="Captcha" src="@Url.Action("CaptchaImageNew", "Home", new { Area = "" })" />
                                    <a title="Click to refresh Captcha" onclick="RefreshCaptcha()"><i class="fa fa-refresh ms-2" aria-hidden="true"></i></a>
                                </span>
                                @Html.TextBoxFor(x => x.Captcha, new { @id = "txtCaptcha", @class = "form-control DisabledInputs", placeholder = @LabelDictionary["EnterCaptchaPlaceHolder"], autocomplete = "off", maxlength = "6" })
                            </div>
                            <div id="SpanCaptchaValidation">
                                @Html.ValidationMessageFor(x => x.Captcha)
                            </div>
                        </div>

                    </div>

                    <br />
                    <div class="row">
                        <div class="col-3">
                        </div>
                        <div class="col-sm-3">
                            @if (Session["ActionFromIndex"].ToString() == "A")
                            {
                            <a class="btn btn-loginpanel btn-block" style="width:75px;" href="@Url.Action("Index", "Home", new { Area = "" })">@LabelDictionary["Cancel"]</a>
                            }
                            else if (Session["ActionFromIndex"].ToString() == "I")
                            {
                        <a class="btn btn-loginpanel btn-block" style="width:75px;" href="@Url.Action("Intermediary", "Home", new { Area = "" })">@LabelDictionary["Cancel"]</a>
                            }
                            else 
                            {
                        <a class="btn btn-loginpanel btn-block" style="width:75px;" href="@Url.Action("GAC", "Home", new { Area = "" })">@LabelDictionary["Cancel"]</a>
                            }
                            

                        </div>
                        
                        <div class="col-3">
                            <input type="button" id="btnVerify" class="btn btn-loginpanel btn-block" style="width:75px;" value="@LabelDictionary["Verify"]" onclick="return encryptOTP();" />
                        </div>


                        <div class="col-sm-2"></div>
                    </div>


                }
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-lg-6" style="text-align: center;">
                <div class="card box-shadow mt-2">
                    <div class="card-body" style="padding-top: 6px; padding-bottom: 6px; padding-left: 5px; padding-right: 5px;">
                        <b>@Model.Submitted.Trim()</b><br />@LabelDictionary["AppealsReceived"]
                    </div>
                </div>
            </div>
            <div class="col-md-12 col-sm-12 col-lg-6" style="text-align:center;">
                <div class="card box-shadow mt-2">
                    <div class="card-body" style="padding-top:6px;padding-bottom:6px; padding-left:5px;padding-right:5px;">
                        <b>@Model.Disposed.Trim()</b><br />@LabelDictionary["AppealsDisposed"]
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->

<script>
    function RefreshCaptcha() {
        $("#CaptchaImage").attr("src", '@Url.Action("CaptchaImageNew", "Home", new { area = "" })?' + new Date().getTime());
    };
    function encryptOTP() {
        if ($("#OTPVerificationNew").valid()) {
         var EncryptedID = $('#EncryptedID').val();
        var OTP = $('#OTP').val();
        var keynew = "@EncKeySalt";
        var key = CryptoJS.enc.Utf8.parse(keynew);
        var iv = CryptoJS.enc.Utf8.parse(keynew);

        var encrypted = CryptoJS.AES.encrypt(CryptoJS.enc.Utf8.parse(OTP), key,
            {
                keySize: 128 / 8,
                iv: iv,
                mode: CryptoJS.mode.CBC,
                padding: CryptoJS.pad.Pkcs7
            });
            encrypted = encrypted.toString();

            var EncryptedIDval = CryptoJS.AES.encrypt(CryptoJS.enc.Utf8.parse(EncryptedID), key,
                {
                    keySize: 128 / 8,
                    iv: iv,
                    mode: CryptoJS.mode.CBC,
                    padding: CryptoJS.pad.Pkcs7
                });
            EncryptedIDval = EncryptedIDval.toString();

            $('#OTP').val(encrypted);
           // $('#OTP').val("000000");
            $('#OTPEnc').val(encrypted);
            $('#EncryptedID').val(EncryptedIDval);
            $('#OTPVerificationNew').submit();
            return true;
        }
        else {
            return false;
        };
    }

</script>


