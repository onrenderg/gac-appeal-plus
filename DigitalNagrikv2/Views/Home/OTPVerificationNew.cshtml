                                @LabelDictionary["EnterOTPSentonMobileNumber"] <b>xxxxxx</b><b>@Model.EncryptedID.Substring(6, 4) </b> @LabelDictionary["withOTPID"] <b>
                                    <span id="otpshow">@Html.DisplayFor(m => m.OTPID, new { @id = "otpshow" })</span>
                                </b>
                            </span>
                                }
                                else { 
                            <span>
                                @LabelDictionary["EnterOTPSentonMobileNumber"] <b>@Model.EncryptedID </b> @LabelDictionary["withOTPID"]<b>
                                    <span id="otpshow">@Html.DisplayFor(m => m.OTPID, new { @id = "otpshow" })</span>
                                </b>
                            </span>
                                }
                            </label>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            @Html.PasswordFor(m => m.OTP, new { @class = "form-control", @OnKeyPress = "return AllowNumericOnly();" })
