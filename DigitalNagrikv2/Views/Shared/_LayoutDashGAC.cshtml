@using DigitalNagrik.Models
<!DOCTYPE html>
<html lang="en" class="light-style layout-menu-fixed" dir="ltr" data-theme="theme-default" data-assets-path="../DashAssets/" data-template="vertical-menu-template-free">
@{
    string DefaultLangCulture = "en-IN";
    string DefaultLangCultureName = "English";
    string RegnlLangCulture = "hi-IN";
    string RegnlLangCultureName = "हिंदी";
    Dictionary<string, string> LabelDictionary = ViewData["LabelDictionary"] as Dictionary<string, string>;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <title>@LabelDictionary["GrievanceAppellateCommittee"]</title>
    <meta name="description" content="" />
    <link href=@Url.Content("~/assets/img/favicon.png") rel="icon">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href=@Url.Content("~/assets/css/font.css") rel="stylesheet" />
    <link href=@Url.Content("~/assets/vendor/fontawesome-free/css/all.min.css") rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/DashAssets/css/boxicons.css")" />
    <link rel="stylesheet" href="@Url.Content("~/DashAssets/css/core.css")" class="template-customizer-core-css" />
    <link rel="stylesheet" href="@Url.Content("~/DashAssets/css/theme-default.css")" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="@Url.Content("~/DashAssets/css/demo.css")" />
    <link rel="stylesheet" href="@Url.Content("~/DashAssets/css/apex-charts.css")" />
    <link href="@Url.Content("~/assets/vendor/bootstrap-icons/bootstrap-icons.css")" rel="stylesheet">
    <script src=@Url.Content("~/assets/js/jquery.min.js")></script>
    <script src="@Url.Content("~/DashAssets/js/popper.js")"></script>
    <script src="@Url.Content("~/DashAssets/js/bootstrap.js")"></script>
    <script src="@Url.Content("~/assets/js/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/assets/js/jquery.validate.unobtrusive.min.js")"></script>
    <script src="@Url.Content("~/assets/js/jquery.validate.custom.js")"></script>
    <link href="@Url.Content("~/assets/alertifyjs/css/alertify.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/assets/alertifyjs/alertify.min.js")"></script>
    <script src="@Url.Content("~/DashAssets/js/apexcharts.js")"></script>
    <script>
        function RedirectToUrl(Url) {
            window.location.href = Url;
        }
    </script>
    @*<script type="text/javascript">
            function preventBack() { window.history.forward(); }
            setTimeout("preventBack()", 0);
            window.onunload = function () { null };
        </script>*@
    @{
        string linkhref = Url.Action("ChangePassword", "UserList", new { Area = "" });
    }
</head>

<body>
    <div id="topbar">
        <div class="px-3">
            <div class="row">
                <div class="col-lg-6">
                    <div class="text-start pt-1">
                        <a class="btn btn-light btn-sm" href=@Url.Action("Index", "GACGridViewInbox", new {Area="GridView"})><i class="fa fa-home align-middle"></i></a>
                        <a href="javascript:void(0);" class="text-white align-bottom"
                           data-bs-toggle="popover" data-bs-placement="right"
                           data-bs-title="@LabelDictionary["UserDetails"]" data-bs-html="true"
                           data-bs-content="<b>@LabelDictionary["GACName"]: </b>@DigitalNagrik.Models.UserSession.GACName<br/><b>@LabelDictionary["UserRole"]: </b> @DigitalNagrik.Models.UserSession.RoleName  </span>@(DigitalNagrik.Models.UserSession.isSSOLogin=="N" ? "<br><br> <a class='alert-link' href="+linkhref+"> "+@LabelDictionary["ChangePassword"]+"</a>" : "")">
                            <span class="me-1">@LabelDictionary["Welcome"],</span>@DigitalNagrik.Models.UserSession.UserName <i class="fa fa-info-circle"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="text-end pt-1">                       
                        <a class="btn btn-sm btn-light" href="javascript:void(0);" onclick="RedirectToUrl('@Url.Action("ChangeLanguage", "CommonControls", new { Area = "", LangCulture = (UserSession.LangCulture == DefaultLangCulture ? RegnlLangCulture : DefaultLangCulture) })');">
                            @if (UserSession.LangCulture == DefaultLangCulture)
                            {
                                <span title="Change language to @RegnlLangCultureName"><i class="fa fa-language me-2"></i>@RegnlLangCultureName</span>
                            }
                            else if (UserSession.LangCulture == RegnlLangCulture)
                            {
                                <span title="Change language to @DefaultLangCultureName"><i class="fa fa-language me-2"></i>@DefaultLangCultureName</span>
                            }
                        </a>
                        <button class="btn btn-danger btn-sm" id="btnLogOutSSO"><i class="fa fa-sign-out align-middle"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="mid-header" class=" d-none d-lg-block">
        <div class="text-center">
            <div class="banner">
                @if (DigitalNagrik.Models.UserSession.LangCulture == "en-IN")
                {
                    <img class="img-fluid" src="@Url.Content("~/assets/img/logo.png")" alt="" />
                }
                else
                {
                    <img class="img-fluid" src="@Url.Content("~/assets/img/logo_hindi.png")" alt="" />
                }
            </div>
        </div>
    </div>
    @RenderBody()
    <footer id="footer" style="margin-top: 10px; background-color: #175a7b; color: #ffffff;">
        <div class="footer-top">
            <div class="container">
                <div class="footer-c py-3" style="text-align: center;font-size:17px">
                    <p class="m-0">@Html.Raw(LabelDictionary["Disclaimer"])</p>
                    <p class="m-0"> @Html.Raw(LabelDictionary["DesignedDevelopedbyNIC"])</p>
                    <a href="https://www.nic.in" target="_blank" rel="noopener noreferrer">
                        <img src="@Url.Content("~/assets/img/iconic_logo_v3.png")" height="40" />
                    </a>
                </div>
            </div>
        </div>
    </footer>
    <script>
        $("body").on("change", "#google_translate_element select", function (e) {
            alert($(this).find(":selected").val());
        });
    </script>
    @if (!string.IsNullOrEmpty(Convert.ToString(TempData["Status"])))
    {
        string AlertFlag = Convert.ToString(TempData["Status"]);
        string AlertMessage = !string.IsNullOrWhiteSpace(Convert.ToString(TempData["Status_Msg"])) ? Convert.ToString(TempData["Status_Msg"]) : string.Empty;
        string AlertType = !string.IsNullOrWhiteSpace(Convert.ToString(TempData["Status_Type"])) ? Convert.ToString(TempData["Status_Type"]) : string.Empty;
        string IconClass = "bx-check-circle";
        switch (AlertFlag)
        {
            case "S":
                AlertMessage = "Successfully Saved"; AlertType = "success";
                break;
            case "U":
                AlertMessage = "Successfully Updated"; AlertType = "success";
                break;
            case "D":
                AlertMessage = "Successfully Deleted"; AlertType = "success";
                break;
            case "O":
                IconClass = "bx-info-circle";
                break;
            default:
                IconClass = "bx-x-circle";
                AlertMessage = "Failed to process your request. Please contact your administrator if problem persists"; AlertType = "error"; IconClass = "bx-x-circle";
                break;
        }
        if (!string.IsNullOrEmpty(AlertMessage) && !string.IsNullOrEmpty(AlertType))
        {
            <script type="text/javascript">
                $(function () {
                    alertify.notify("<div class='animated fadeIn m-0'><i class='bx @IconClass me-1'></i> @AlertMessage </div>", "@AlertType", 5, function () { });
                });
            </script>
        }
    }

    @if (TempData["AlertStatus"] != null)
    {
        DigitalNagrik.Models.BALCommon.CustomClientAlerts Alert = (DigitalNagrik.Models.BALCommon.CustomClientAlerts)TempData["AlertStatus"];
        <script type="text/javascript">
            $(function () { alertify.alert("<h5 class='m-0'><i class='bx @Alert.AlertIcon @Alert.AlertColor me-1'></i> @Alert.AlertTitle</h5>", "@Html.Raw(Alert.AlertMessage)", function () { }); });
        </script>
    }
    <script>
    $('#btnLogOutSSO').click(function () {
       window.location.href = '@Url.Action("GACLogout", "SSOLogout", new {Area=""})';
    });
        const popoverTriggerList = document.querySelectorAll('[data-bs-toggle="popover"]')
        const popoverList = [...popoverTriggerList].map(popoverTriggerEl => new bootstrap.Popover(popoverTriggerEl))
    </script>
</body>
</html>
