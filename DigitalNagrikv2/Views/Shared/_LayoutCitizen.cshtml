@using DigitalNagrik.Models
<!DOCTYPE html>
<html lang="en">
@{
    string DefaultLangCulture = "en-IN";
    string DefaultLangCultureName = "English";
    string RegnlLangCulture = "hi-IN";
    string RegnlLangCultureName = "हिंदी";
    Dictionary<string, string> LabelDictionary = ViewData["LabelDictionary"] as Dictionary<string, string>;
}
@if (IsSectionDefined("cssSection"))
{
    @RenderSection("cssSection")
}

@if (IsSectionDefined("jsSection"))
{
    @RenderSection("jsSection")
}
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Grievance Appellate Committee</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <link href="assets/img/favicon.png" rel="icon">
    <link href=@Url.Content("~/assets/css/font.css") rel="stylesheet" />
    <link href=@Url.Content("~/assets/vendor/fontawesome-free/css/all.min.css") rel="stylesheet">
    <link href=@Url.Content("~/assets/vendor/animate.css/animate.min.css") rel="stylesheet">
    <link href=@Url.Content("~/assets/vendor/aos/aos.css") rel="stylesheet">
    <link href=@Url.Content("~/assets/vendor/bootstrap/css/bootstrap.min.css") rel="stylesheet">
    <link href=@Url.Content("~/assets/vendor/bootstrap-icons/bootstrap-icons.css") rel="stylesheet">
    <link href=@Url.Content("~/assets/vendor/boxicons/css/boxicons.min.css") rel="stylesheet">
    <link href=@Url.Content("~/assets/vendor/glightbox/css/glightbox.min.css") rel="stylesheet">
    <link href=@Url.Content("~/assets/vendor/swiper/swiper-bundle.min.css") rel="stylesheet">
    <link href=@Url.Content("~/assets/css/jquery.dataTables.min.css") rel="stylesheet" />
    <link href=@Url.Content("~/assets/css/jquery-ui.min.css") rel="stylesheet" />
    <link href=@Url.Content("~/assets/alertifyjs/css/alertify.css") rel="stylesheet" />
    <link href=@Url.Content("~/assets/css/style.css") rel="stylesheet">
    <link href=@Url.Content("~/assets/css/customstyle.css") rel="stylesheet">
    <script src=@Url.Content("~/assets/js/jquery.min.js")></script>
    <script src=@Url.Content("~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js")></script>
    <script src=@Url.Content("~/assets/js/jquery.validate.min.js")></script>
    <script src=@Url.Content("~/assets/js/jquery.validate.unobtrusive.min.js")></script>
    <script src=@Url.Content("~/assets/js/jquery.validate.custom.js")></script>
    <script src=@Url.Content("~/assets/js/jquery.datatable.min.js")></script>
    <script src=@Url.Content("~/assets/alertifyjs/alertify.js")></script>
    <script src=@Url.Content("~/assets/js/jquery-ui.min.js")></script>
    <style>
        .Mandatory {
            color: red;
        }

        .form-control:disabled, .form-control[readonly] {
            background-color: #e9ecef;
            opacity: 1;
        }

        .field-validation-error {
            color: red;
        }

        .validation-summary-errors {
            color: red;
        }

        #header {
            padding: 0px;
        }
    </style>
</head>

<body>
    <div id="topbar" class="d-flex align-items-center">
        <div class="container d-flex align-items-center justify-content-center justify-content-md-between">

            <div class="pull-right">
                <span style="text-align:left;">
                    <i class="fa fa-user-alt"></i>&nbsp;@LabelDictionary["Welcome"],
                    @(HttpContext.Current.Session["UserName"]==null? @HttpContext.Current.Session["CitizenEmailMobile"].ToString():HttpContext.Current.Session["UserName"]+" (" +HttpContext.Current.Session["CitizenEmailMobile"] +")")

                </span>
            </div>

            <div class="align-items-center d-md-flex">
                <i class="bi bi-list mobile-nav-toggle"></i>
                @if (ViewData["LanguageMaster"] != null)
                {
                    var objList = new List<mLanguageMaster>();
                    objList = (List<mLanguageMaster>)ViewData["LanguageMaster"];
                    <div class="dropdown">
                        <button class="dropbtn" style="min-width:150px;">@objList.Where(x => x.languageCode == (UserSession.LangCulture == null ? "en-IN" : UserSession.LangCulture)).FirstOrDefault().languageDescriptionlocal   </button>
                        <div class="dropdown-content mt-1">
                            @foreach (var obj in objList)
                            {
                                if (obj.languageCode != UserSession.LangCulture)
                                {
                                    @Html.ActionLink(obj.languageDescriptionlocal, "ChangeLanguage", "CommonControls", new { Area = "", LangCulture = obj.languageCode }, "")
                                }
                            }

                        </div>
                    </div>
                }
                <button class="btn btn-danger btn-sm btn-mobile" id="btnLogOutSSO" style="font-size:14px;padding:4px;"><i class="bx bx-power-off text-white align-middle"></i>&nbsp;@LabelDictionary["Logout"]</button>
            </div>
        </div>

    </div>
    <div id="mid-header" class=" d-none d-lg-block">
        <div class="container d-flex justify-content-center">
            <div class="banner">
                @if (DigitalNagrik.Models.UserSession.LangCulture == "en-IN")
                {
                    <img class="img-fluid" src="@Url.Content("~/assets/img/logo.png")" alt="" />
                }
                else
                {
                    <img class="img-fluid" src="@Url.Content("~/assets/img/logo_hindi.png")" alt="" />
                }
            </div>

        </div>
    </div>
    <header id="header">
        <div class="container align-items-center ">
            <a href="index.html" class="logo me-auto   d-lg-none"><img src="@Url.Content("~/assets/img/logo.png")" alt=""></a>
            <nav id="navbar" class="navbar order-last order-lg-0 ">
                <div class="container-fluid">
                    <ul>
                        <li><a class="nav-link scrollto active " href=@Url.Action("CitizenDashboard","Registration")><i class="fa fa-home"></i>&nbsp;&nbsp; @LabelDictionary["Home"] </a></li>                  
                    </ul>                   
                </div>
            </nav>
        </div>
    </header>
    <main id="main">
        @RenderBody()
    </main>
    <div class="footer fixed-bottom" style="padding-top: 10px;  position:relative ;  padding-bottom: 10px;">
        <div class="container">
            <div class="footer-c py-3" style="text-align: center;font-size:17px">
                @Html.Raw(LabelDictionary["Disclaimer"])
                <br>
                @Html.Raw(LabelDictionary["DesignedDevelopedbyNIC"]) <a href="https://www.nic.in" target="_blank" rel = "noopener noreferrer">
                    <img src="@Url.Content("~/assets/img/iconic_logo_v3.png")" height="40" />
                </a>
            </div>
        </div>
    </div>

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
    <script src=@Url.Content("~/assets/vendor/purecounter/purecounter_vanilla.js")></script>
    <script src=@Url.Content("~/assets/vendor/aos/aos.js")></script>
    <script src=@Url.Content("~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js")></script>
    <script src=@Url.Content("~/assets/vendor/glightbox/js/glightbox.min.js")></script>
    <script src=@Url.Content("~/assets/vendor/swiper/swiper-bundle.min.js")></script>
    <script src=@Url.Content("~/assets/vendor/php-email-form/validate.js")></script>
    <script src=@Url.Content("~/assets/js/main.js")></script>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
    <script>
        function RedirectToUrl(Url) {
            window.location.href = Url;
        }
    </script>
    <script>

    $('#btnLogOutSSO').click(function () {
       window.location.href = '@Url.Action("Logout", "Registration")';
    });
    </script>
    @if (TempData["SuccessMessage"] != null)
    {
        <script type="text/javascript">

                    alertify.success('@TempData["SuccessMessage"]');

        </script>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <script type="text/javascript">
                window.onload = function () {
                    alertify.error('@TempData["ErrorMessage"]');
                 };
        </script>
    }
    @if (ViewData["SuccessMessage"] != null)
    {
        <script type="text/javascript">
                window.onload = function () {
                    alertify.success('@ViewData["SuccessMessage"]');
                 };
        </script>
    }
    @if (ViewData["ErrorMessage"] != null)
    {
        <script type="text/javascript">
                window.onload = function () {
                    alertify.error('@ViewData["ErrorMessage"]');
                 };
        </script>
    }

</body>

</html>